<p id="notice"><%= notice %></p>

<h1>Sms</h1>

<table>
  <thead>
    <tr>
      <th>From</th>
      <th>To</th>
      <th>Message</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @sms.each do |sm| %>
      <tr>
        <td><%= sm.readble_offender %></td>
        <td><%= sm.readble_victim %></td>
        <td><%= sm.message %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

